{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "coolbot/ChatCashierBot/src/**/*",
    "coolbot/ChatCashierBot/shared/**/*"
  ],
  "exclude": ["node_modules"]
}
